<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_4dp"
    android:layout_marginHorizontal="@dimen/_4dp"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="@dimen/_12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivLessonIcon"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:src="@drawable/outline_checkbook_24"
            app:tint="?colorOnPrimary"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvLessonTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_24sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="@dimen/_20sp"
            android:textColor="?colorOnPrimary"
            tools:text="@string/lesson" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
